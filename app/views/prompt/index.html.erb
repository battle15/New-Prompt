    <button> Generate new prompt! </button>
    <% location = Faker::Address.country.downcase%>
    <% species = Faker::Creature::Animal.name.downcase%>
    <% item = Faker::Appliance.equipment.downcase%>
    <div>
    <% prompt = "Create a story about a #{species} in #{location} with a(n) #{item}" %>
    <p>Prompt: <%= prompt %></p>
    </div>

    <%#= Prompt.first.full_prompt%>
  
  <!---Form to save prompt into database--->
</form>

  <form action="/create_prompts" method= post>    
    <!--If a prompt has not been generated-->
    <input type="hidden" value=<%= location %> name="location_text">
    <input type="hidden" value=<%= species %> name="species_text">
    <input type="hidden" value=<%= item %> name="item_text"> 
    <input type="hidden" value=<%= prompt %> name="prompt_text">
    <button> Choose prompt </button>
  </form>


