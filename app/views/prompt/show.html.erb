<div class="container">
 
  <p class ="fs-2 text-center" >Prompt: <%= @the_prompt.full_prompt%></p>

  <!--Show every story for the user---->

  <!--needs to change to prompts show page where a list of the current user's prompts with stories are shown.--->
  <div class="form-outline">
    <form action="/insert_story" method="post">

      <!-- TITLE INPUT SECTION--->
      <div>
        <label class="form-label fs-4" for="title_box">Title</label>
        <textarea class="form-control" type="text" placeholder="Name your story!" id="title_box" name="query_title" rows="1"></textarea>
      </div>

      <!-- BODY INPUT SECTION--->
      <div>
        <label class="form-label fs-4" for="body_box">Story</label>
        <textarea class="form-control " type="body" placeholder="Write your story here!" id="body_box" name="query_body" rows="5"></textarea>
      </div>

      <!--To fetch prompt and User id: hidden-->
      <input type="hidden" id="prompt_id_box" name="query_prompt_id" value="<%= @the_prompt.id%>">

      <input type="hidden" id="user_id_box" name="query_user_id" value="<%=current_user.id%> ">

      <div class="">
      <button class="btn btn-primary">Save Story!</button>
      </div>
    </form>

  </div>

</div>
